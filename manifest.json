{
  "manifest_version": 3,
  "name": "Auto PiP Streaming",
  "version": "1.0",
  "description": "Automatically activates Picture-in-Picture when switching tabs or windows on Netflix, Prime Video, Disney+, and Paramount+.",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.primevideo.com/*",
    "*://*.disneyplus.com/*",
    "*://*.paramountplus.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.primevideo.com/*",
        "*://*.disneyplus.com/*",
        "*://*.paramountplus.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon.png"
  }
}